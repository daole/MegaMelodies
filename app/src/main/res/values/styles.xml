<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="CustomToolbar" parent="Toolbar">
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="SpinnerStyle" parent="@style/Widget.AppCompat.Spinner.Underlined">
    </style>

    <style name="SpinnerItemStyle" parent="@android:style/Widget.Holo.TextView.SpinnerItem">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>

    <style name="DropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@drawable/bg__dropdown_list_view</item>
        <item name="android:divider">@color/color_primary</item>
        <item name="android:dividerHeight">@dimen/divider_height</item>
    </style>

    <style name="Container.PlaybackControls" parent="Container.WrapContent.Vertical.OrientationVertical.Padding">
        <item name="android:background">@color/window_background</item>
    </style>

    <style name="Root" parent="Container.Full">
        <item name="android:background">@color/window_background</item>
    </style>

    <style name="Root.DrawerLayout" parent="Root">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ViewPager" parent="Root">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TabLayout" parent="Container.WrapContent.Vertical">
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="TextView.ListItem" parent="TextView">
    </style>

    <style name="TextView.ListItem.Primary" parent="TextView.ListItem">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TextView.ListItem.Primary.Dark" parent="TextView.ListItem.Primary">
        <item name="android:textColor">@color/text_color_primary_dark</item>
    </style>

    <style name="TextView.ListItem.Primary.Dark.Name" parent="TextView.ListItem.Primary.Dark">
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <style name="TextView.ListItem.Primary.Dark.Center" parent="TextView.ListItem.Primary.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.ListItem.Secondary" parent="TextView.ListItem">
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="TextView.ListItem.Secondary.Dark" parent="TextView.ListItem.Secondary">
        <item name="android:textColor">@color/text_color_secondary_dark</item>
    </style>

    <style name="TextView.ListItem.Secondary.Dark.Artist" parent="TextView.ListItem.Secondary.Dark">
    </style>

    <style name="TextView.ListItem.Secondary.Dark.TracksNum" parent="TextView.ListItem.Secondary.Dark">
    </style>

    <style name="TextView.DurationStart" parent="TextView">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="TextView.DurationEnd" parent="TextView">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TextView.PlaybackControls.TrackTitle" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="EditText.PlaylistTitle" parent="EditText">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:hint">@string/hint_playlist_title</item>
    </style>

    <style name="Button.BorderLess.Dialog" parent="Button.BorderLess">
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="Button.BorderLess.Dialog.Cancel" parent="Button.BorderLess.Dialog">
        <item name="android:text">@string/btn__cancel</item>
    </style>

    <style name="Button.BorderLess.Dialog.OK" parent="Button.BorderLess.Dialog">
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:text">@string/btn__ok</item>
    </style>

    <style name="Button.BorderLess.Dialog.AddToRemoveFromPlaylist" parent="Button.BorderLess.Dialog">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/btn__add</item>
    </style>

    <style name="ImageView.PlaybackStatus" parent="ImageView">
        <item name="android:src">@drawable/ic__play</item>
    </style>

    <style name="ImageView.Favorite" parent="ImageView">
        <item name="android:src">@drawable/ic__favorite</item>
    </style>

    <style name="ImageView.MediaItem" parent="ImageView">
        <item name="android:layout_width">@dimen/profile_image_width</item>
        <item name="android:layout_height">@dimen/profile_image_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic__megamelodies_logo</item>
    </style>

    <style name="ImageView.Avatar.Dialog" parent="ImageView.MediaItem">
        <item name="android:layout_width">@dimen/profile_image_width_dialog</item>
        <item name="android:layout_height">@dimen/profile_image_height_dialog</item>
    </style>

    <style name="ImageButton.ContextMenu" parent="ImageButton">
        <item name="android:src">@drawable/ic__context_menu</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ImageButton.SkipToPrevious" parent="ImageButton">
        <item name="android:src">@drawable/ic__skip_to_previous</item>
    </style>

    <style name="ImageButton.SkipToPrevious.Inline" parent="ImageButton.SkipToPrevious">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ImageButton.Play" parent="ImageButton">
        <item name="android:src">@drawable/ic__play</item>
    </style>

    <style name="ImageButton.Play.Inline" parent="ImageButton.Play">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ImageButton.Pause" parent="ImageButton">
        <item name="android:src">@drawable/ic__pause</item>
    </style>

    <style name="ImageButton.Pause.Inline" parent="ImageButton.Pause">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ImageButton.SkipToNext" parent="ImageButton">
        <item name="android:src">@drawable/ic__skip_to_next</item>
    </style>

    <style name="ImageButton.SkipToNext.Inline" parent="ImageButton.SkipToNext">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ProgressBar.Inline" parent="ProgressBar">
        <item name="android:layout_width">@dimen/inline_progress_bar_width</item>
        <item name="android:layout_height">@dimen/inline_progress_bar_height</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ProgressBar.Inline.LoadMore" parent="ProgressBar.Inline">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlaceHolder.PlaybackControls" parent="Container.WrapContent">
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="PlaceHolder.PlaylistActions" parent="Container.WrapContent.Vertical">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
    </style>
</resources>
